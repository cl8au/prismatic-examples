  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --quiet --ext .ts,.js .",
    "format": "prettier --loglevel error --write './src/**/*.{js,jsx,ts,tsx,css,html,json,scss}'",
    "check": "prettier --check './src/**/*.{js,jsx,ts,tsx,css,html,json,scss}'",
    "build": "webpack",
    "test": "echo \"Warning: no test specified\""
